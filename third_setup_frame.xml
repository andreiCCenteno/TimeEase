<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdSetupFrameActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILL UP FORMS"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />

    <EditText
        android:id="@+id/txtstreet"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Street name"
        android:drawableLeft="@drawable/baseline_place_24"
        android:textColorHint="@color/inactive"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:inputType="textCapSentences"
        />

    <EditText
        android:id="@+id/txtcity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtstreet"
        android:drawableLeft="@drawable/baseline_location_city_24"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="City"
        android:textColorHint="@color/inactive"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/txtzipcode"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtcity"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_key_24"
        android:hint="Zip code"
        android:inputType="phone"
        android:maxLength="4"
        android:textColorHint="@color/inactive"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/fourthnextsetupbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/btnformat"
        android:drawableRight="@drawable/baseline_arrow_forward_24"
        android:fontFamily="@font/bungee"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtzipcode"
        android:layout_margin="50dp"
        />

</RelativeLayout>