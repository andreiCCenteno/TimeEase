<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignUpFrameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/txtcreatefieldemail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="275dp"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/inactive"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        />

    <EditText
        android:id="@+id/txtcreatepassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtcreatefieldemail"
        android:drawableLeft="@drawable/baseline_key_24"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/inactive"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        />

    <ImageView
        android:id="@+id/btnShowHidePassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtcreatefieldemail"
        android:layout_alignRight="@id/txtcreatepassword"
        />

    <EditText
        android:id="@+id/txtconfirmpassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtcreatepassword"
        android:drawableLeft="@drawable/baseline_key_24"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@color/inactive"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        />

    <ImageView
        android:id="@+id/btnShowHidePassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtcreatepassword"
        android:layout_alignRight="@id/txtconfirmpassword"
        />

    <Button
        android:id="@+id/btncreate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/txtconfirmpassword"
        android:background="@drawable/btnformat"
        android:text="CREATE"
        android:fontFamily="@font/bungee"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btncreate"
        android:text="or sign in with"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btngoogleaccount"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_below="@id/btncreate"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/google"
        android:text="Continue with Google"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@id/btngoogleaccount"
        android:layout_marginLeft="20dp"
        android:text="You have already an account?"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/txtsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textView"
        android:text="Sign In"
        android:textColor="#3F51B5"
        android:clickable="true"
        android:layout_alignParentBottom="true"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:visibility="invisible" />

</RelativeLayout>