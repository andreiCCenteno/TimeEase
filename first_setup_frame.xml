<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstSetupFrameActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILL UP FORMS"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />

    <EditText
        android:id="@+id/txtStudentId"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Student ID"
        android:drawableLeft="@drawable/baseline_numbers_24"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/inactive"
        android:textColor="@color/white"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/white"
        android:inputType="phone"
        android:maxLength="7"
        />

    <EditText
        android:id="@+id/txtSchoolName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:hint="School Name"
        android:drawableLeft="@drawable/baseline_place_24"
        android:textColorHint="@color/inactive"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:backgroundTint="@color/white"
        />

    <Button
        android:id="@+id/secondnextsetupbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="475dp"
        android:background="@drawable/btnformat"
        android:drawableRight="@drawable/baseline_arrow_forward_24"
        android:fontFamily="@font/bungee"
        android:text="Next"
        android:textColor="@color/black"
        android:textStyle="bold" />


</RelativeLayout>