<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HelpCenterMainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="TIME EASE Help Center"
            app:titleTextColor="@color/black"
            android:background="#6C63FF"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_24"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="#6C63FF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:paddingTop="35dp"
            android:paddingBottom="100dp"
            android:text="How can we help you?"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtHelp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Search here"
            android:fontFamily="@font/baloo"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableLeft="@drawable/baseline_search_24"
            android:background="@drawable/edit_text_format"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Getting Started"
        android:textSize="30dp"
        android:fontFamily="@font/baloo"
        android:textColor="@color/purple_500"
        android:layout_below="@id/layoutConstraint"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title1"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="How can I change password?"/>

    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question1"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="How can I scan QR code?"
        />

    <TextView
        android:id="@+id/question3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question2"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="How to change my credentials?"
        />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance Tracking"
        android:textSize="30dp"
        android:fontFamily="@font/baloo"
        android:textColor="@color/purple_500"
        android:layout_below="@id/question3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/question4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title2"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="How will I find if i'm present?"/>

    <TextView
        android:id="@+id/question5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question4"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Can I use flash when I'm scanning?"
        />

    <TextView
        android:id="@+id/question6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question5"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Can I see my attendance status?"
        />

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Changing Profile"
        android:textSize="30dp"
        android:fontFamily="@font/baloo"
        android:textColor="@color/purple_500"
        android:layout_below="@id/question6"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/question7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title3"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Can i change my name?"/>

    <TextView
        android:id="@+id/question8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question7"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Can i Change my id?"
        />

    <TextView
        android:id="@+id/question9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question8"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Can i change my address?"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_below="@id/question9"
        android:layout_alignParentBottom="true"
        android:background="#6C63FF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:paddingTop="35dp"
            android:paddingBottom="100dp"
            android:text="For update please visit our site\nto see our latest updates"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/my_text"
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>


</ScrollView>