<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupYourAccountFrameActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/archivo_semibold"
        android:text="Please fill up the following form. Ensure that the information you enter are according to your organization for accurate performance"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id = "@+id/firstnextsetupbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/btnformat"
        android:layout_marginTop="475dp"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/baseline_arrow_forward_24"/>

</RelativeLayout>